<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.donkz.pendragon.controller.LobbyController">
    <children>
        <Label fx:id="lblLobbyName" text="Lobby">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="25.0">
            <children>
                <Label text="Lobby Code">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <Label fx:id="lblCode" text="Arbitrary Code">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Button fx:id="btnCopy" mnemonicParsing="false" onAction="#onCopy" text="Copy"/>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="25.0">
                    <children>
                        <Label text="Dungeon Master">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Label>
                        <Label fx:id="lblDm" text="Player Name">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Members">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Label>
                                <VBox fx:id="membersPane" spacing="10.0">

                                </VBox>
                            </children>
                        </VBox>
                        <Separator orientation="VERTICAL">
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                        </Separator>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Chat">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Label>
                                <VBox fx:id="chatBox" prefHeight="200.0" prefWidth="100.0"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <ButtonBar>
            <buttons>
                <Button fx:id="btnChoose" mnemonicParsing="false" text="Choose Character" onAction="#onChoose" />
                <Button fx:id="btnExit" cancelButton="true" mnemonicParsing="false" onAction="#onExit" text="Exit"/>
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
