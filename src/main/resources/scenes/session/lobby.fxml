<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.donkz.pendragon.controller.LobbyController"
      prefHeight="400.0" prefWidth="600.0" spacing="10.0">
    <children>
        <Label fx:id="lblLobbyName" text="Lobby">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="25.0">
            <children>
                <Label text="Lobby Code">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <Label fx:id="lblCode" text="Arbitrary Code">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Button fx:id="btnCopy" mnemonicParsing="false" text="Copy" onAction="#onCopy"/>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="25.0">
                    <children>
                        <Label text="Dungeon Master">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Label>
                        <Label fx:id="lblDm" text="Player Name">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                    <children>
                        <Label text="Members">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Label>
                        <VBox fx:id="membersPane" prefHeight="200.0" prefWidth="100.0" spacing="10.0">

                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="btnExit" cancelButton="true" mnemonicParsing="false" text="Exit"/>
                <Button fx:id="btnStart" mnemonicParsing="false" text="Start" onAction="#onStart"/>
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
