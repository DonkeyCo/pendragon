<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="tile" spacing="10" stylesheets="@/styles/tile.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets topRightBottomLeft="15" />
    </padding>
   <ButtonBar buttonMinWidth="0.0">
     <buttons>
         <Button fx:id="btnStart" graphicTextGap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false">
             <graphic>
                 <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                         <Image url="@../images/play.png" />
                     </image>
                     <viewport>
                         <Rectangle2D />
                     </viewport>
                 </ImageView>
             </graphic>
         </Button>
         <Button fx:id="btnDelete" graphicTextGap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false">
            <graphic>
               <ImageView pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/trash.png" />
                  </image>
                  <viewport>
                     <Rectangle2D />
                  </viewport>
               </ImageView>
            </graphic>
         </Button>
     </buttons>
   </ButtonBar>
    <Label fx:id="lblTitle" styleClass="title" text="Campaign Title" />
</fx:root>
